<h1>Nurses#index</h1>
<p>Find me in app/views/nurses/index.html.erb</p>
<table rules = "all">
    <thead>
		<th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
    </thead>
    <tbody>
<% @nurses.each do |nurse| %>
    <tr>
		<td><%= nurse.name_first[0] + nurse.name_last[0] + nurse.id.to_s %></td>
        <td><%= nurse.name_first %></td>
        <td><%= nurse.name_last%></td>
        <% if @valid == true %>
        <td><%= link_to "Delete", {:controller => "nurses", :action => "delete", :id => nurse.id} %></td>
        <td><%= link_to "Edit", {:controller => "nurses", :action => "edit", :id => nurse.id} %></td>
        <% end %>
    </tr>
<% end %>
    </tbody>
</table>
<br>
<% if @valid == true %>
<a href="/nurses/register">Add Nurse</a>
<% end %>
<br><br>
<a href= "<%= @main_route %>">Main Menu</a>