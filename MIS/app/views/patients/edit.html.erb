<h1>Patients#edit</h1>
<p>Find me in app/views/patients/edit.html.erb</p>
<%= form_tag(:action => 'edit_submit', :id => @editPatient[:id]) do %>
<p>First Name:</br><%= text_field_tag(:first_name, @editPatient[:name_first], :required => true) %></p>
<p>Last Name:</br><%= text_field_tag(:last_name, @editPatient[:name_last], :required => true) %></p>
<p>Gender:</p>
<p><%= radio_button_tag(:gender, 'Male', (@editPatient[:gender] == 'Male'))  %>Male</p>
<p><%= radio_button_tag(:gender, 'Female', (@editPatient[:gender] == 'Female'))  %>Female</p>
<p>Social Security Number:</br><%= text_field_tag(:ssn, @editPatient[:ssn], :maxlength => 9, :required => true) %></p>
<p>Address:</br><%= text_field_tag(:address, @editPatient[:address], :required => true) %></p>
<p>Phone:</br><%= telephone_field "", :phone, :value => @editPatient[:phone], :required => true %></p>
<p>Date of Birth:</br><%= date_field "", :dob, :value => @editPatient[:dob], :required => true,  max: Date.today %></p>
<p>Weight:</br><%= number_field "",:weight, :value => @editPatient[:weight], :required => true, step: 0.01 %></p>
<p>Height:</br><%= number_field "",:height, :value => @editPatient[:height], :required => true, step: 0.01 %></p>
<%= submit_tag("Save Changes")%>
<% end %>