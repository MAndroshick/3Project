<h1>Hspstaffs#index</h1>
<p>Find me in app/views/hspstaffs/index.html.erb</p>
<table rules = "all">
    <thead>
		<th>ID</th>
        <th>First Name</th>
        <th>Last Name</th>
    </thead>
    <tbody>
<% @hspstaffs.each do |hspstaff| %>
    <tr>
		<td><%= hspstaff.name_first[0] + hspstaff.name_last[0] + hspstaff.id.to_s %></td>
        <td><%= hspstaff.name_first %></td>
        <td><%= hspstaff.name_last%></td>
        <% if @valid == true %>
        <td><%= link_to "Delete", {:controller => "hspstaffs", :action => "delete", :id => hspstaff.id} %></td>
        <td><%= link_to "Edit", {:controller => "hspstaffs", :action => "edit", :id => hspstaff.id} %></td>
        <% end %>
    </tr>
<% end %>
    </tbody>
</table>
<br>
<% if @valid == true %>
<a href="/hspstaffs/register">Add HSP Staff</a>
<% end %>
<br><br>
<a href= "<%= @main_route %>">Main Menu</a>